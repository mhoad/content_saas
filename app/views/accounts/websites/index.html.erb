<div id='sidebar' class='col-md-4'>
  <% if owner? %>
    <ul>
      <li><%= link_to "Change Plan", choose_plan_path %></li>
      <li><%= link_to "Add Website", new_website_path %></li>
      <li><%= link_to "Users", users_path %></li>
      <li><%= link_to "Billing", billing_path %></li>
    </ul>
  <% end %>
</div>
<h2>Websites</h2>
<table>
  <tbody>
    <tr>
      <td>Website</td>
      <td></td>
      <td></td>
    </tr>
    <% @websites.each do |website| %>
      <tr>
        <td><%= link_to website.url, website %></td>
        <td><%= link_to "Edit", edit_website_path(website) %></td>
        <td>
          <%= link_to "Remove", website_path(website),
            method: :delete,
            data: { confirm: "Are you sure you want to remove this user?" },
            class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>